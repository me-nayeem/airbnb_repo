<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Airbnb Home</title>
  <link rel="stylesheet" href="airbnbHome.css"> 
  <!-- Since "public" is static, we just use /filename -->
</head>
<body>
  <header>
    <h1>Welcome to the Airbnb Home Page üè°</h1>
  </header>

  <main>
    <div class="actions">
      <a href="/set-home" class="register-btn">+ Register Your Home</a>
    </div>

    <section class="houses">
      <h2>Available Homes</h2>
      <ul class="house-list">
        <% houses.forEach((house) => { %>
          <li class="house-card">
            <span><%= house.houseName %></span>
          </li>
        <% }); %>
      </ul>
    </section>
  </main>
</body>
</html>
