<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb Home</title>
    <link rel="stylesheet" href="/airbnbHome.css" />
  </head>
  <body>
    <header>
      <nav class="navbar">
        <div class="logo">Airbnb</div>

        <button class="menu-toggle" id="menuToggle">☰</button>

        <ul class="nav-links" id="navLinks">
          <li><a href="/DashBoard">DashBoard</a></li>
          <li><a href="/favorites">Favorite Homes</a></li>
          <li><a href="/my-homes">My Homes</a></li>
          <li><a href="/bookings">My Bookings</a></li>
        </ul>

        <div class="user-login">
          <a href="/login">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="currentColor"
              viewBox="0 0 24 24"
              class="user-icon"
            >
              <path
                d="M12 12c2.7 0 5-2.3 5-5s-2.3-5-5-5-5 2.3-5 5 2.3 5 5 5zm0 2c-3.3 0-10 1.7-10 5v3h20v-3c0-3.3-6.7-5-10-5z"
              />
            </svg>
            Login
          </a>
        </div>
      </nav>
    </header>

    <main>
      <div class="actions">
        <a href="/set-home" class="register-btn">+ Register Your Home</a>
      </div>

      <!-- Tabs (all, toprated, nearby)-->
      <nav class="tabs" id="tabs">
        <button class="tab active" data-tab="all">All</button>
        <button class="tab" data-tab="top">Top Rated</button>
        <button class="tab" data-tab="nearby">Nearby</button>
      </nav>

      <section class="houses">
        <h2>Available Homes</h2>
        <ul class="house-list" id="houseList">
          <% houses.forEach((house) => { %>
          <li
            class="house-card"
            data-rating="<%= house.rating || 0 %>"
            data-nearby="<%= house.nearby ? 'true' : 'false' %>"
          >
            <div class="card-media">
              <img
                src="<%= house.photo ? house.photo : 'airbnbimg.jpeg' %>"
                alt="<%= house.houseName %>"
              />
            </div>
            <div class="card-body">
              <h3 class="house-title"><%= house.houseName %></h3>

              <div class="house-meta">
                <div class="location">
                  <svg
                    class="pin"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    aria-hidden="true"
                  >
                    <path
                      d="M12 2C8.686 2 6 4.686 6 8c0 5.25 6 12 6 12s6-6.75 6-12c0-3.314-2.686-6-6-6z"
                      stroke="currentColor"
                      stroke-width="1.2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    ></path>
                    <circle cx="12" cy="8" r="2" fill="currentColor"></circle>
                  </svg>
                  <span><%= house.location || 'Unknown' %></span>
                </div>

                <div class="rating">
                  <span class="stars">
                    <% const full = Math.floor(house.rating || 0); const half =
                    (house.rating % 1) >= 0.5; for (let i=0;i<5;i++) { if (i <
                    full) { %>
                    <span class="star full">★</span>
                    <% } else if (i === full && half) { %>
                    <span class="star half">★</span>
                    <% } else { %>
                    <span class="star empty">☆</span>
                    <% } } %>
                  </span>
                  <span class="rating-num"
                    ><%= (house.rating || 0).toFixed(1) %></span
                  >
                </div>
              </div>

              <div class="card-footer">
                <div class="price">
                  <span class="amount">৳<%= house.pricePerNight || '—' %></span>
                  <span class="per">/ night</span>
                </div>

                <a
                  href="/houses/<%= encodeURIComponent(house.houseName) %>"
                  class="view-btn"
                  >View</a
                >
              </div>
            </div>
          </li>
          <% }); %>
        </ul>
      </section>
    </main>

    <script>
      (function () {
        const tabs = document.querySelectorAll(".tab");
        const houseList = document.getElementById("houseList");
        const cards = Array.from(houseList.children);

        function setActiveTab(tabBtn) {
          tabs.forEach((t) => t.classList.remove("active"));
          tabBtn.classList.add("active");
        }

        function filterBy(tab) {
          cards.forEach((card) => {
            const rating = parseFloat(card.dataset.rating) || 0;
            const nearby = card.dataset.nearby === "true";

            let show = true;
            if (tab === "top") {
              show = rating >= 4.5;
            } else if (tab === "nearby") {
              show = nearby;
            } else {
              show = true;
            }

            card.style.display = show ? "" : "none";
          });
        }

        tabs.forEach((btn) => {
          btn.addEventListener("click", (e) => {
            const tab = btn.dataset.tab;
            setActiveTab(btn);
            filterBy(tab);
            try {
              localStorage.setItem("selectedAirbnbTab", tab);
            } catch (e) {}
          });
        });

        try {
          const last = localStorage.getItem("selectedAirbnbTab") || "all";
          const startBtn =
            Array.from(tabs).find((t) => t.dataset.tab === last) || tabs[0];
          startBtn.click();
        } catch (e) {
          tabs[0].click();
        }
      })();
    </script>
  </body>
</html>
